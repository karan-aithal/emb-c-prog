{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "(gdb) Launch",
          "type": "cppvsdbg",
          "request": "launch",
          "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:/MinGw/bin/gdb.exe",  // Replace with the path to your MinGW gdb
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "Build C Program",  // Make sure this matches your tasks.json task name
          "internalConsoleOptions": "neverOpen",
          "logging": { "engineLogging": true },
          "launchCompleteCommand": "exec-run"
      }
  ]
}
